<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/personText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="个人信息"
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stuNumTag"
        android:text="学号："
        android:layout_below="@+id/personText"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vCodeTag"
        android:text="校验码："
        android:layout_below="@+id/stuNumTag"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stuNumText"
        android:layout_below="@+id/personText"
        android:layout_toRightOf="@+id/stuNumTag"
        android:text="test"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vCodeText"
        android:layout_below="@+id/stuNumTag"
        android:layout_toRightOf="@+id/vCodeTag"
        android:text="test"
        android:textSize="20sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/leftText"
        android:text="剩余床位信息"
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/vCodeText"
        android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/left5Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="五号楼：0"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/leftText"/>

    <TextView
        android:id="@+id/left8Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="八号楼：0"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/left5Text"/>

    <TextView
        android:id="@+id/left9Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="九号楼：0"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/left8Text"/>

    <TextView
        android:id="@+id/left13Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="十三号楼：0"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/left9Text"/>

    <TextView
        android:id="@+id/left14Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="十四号楼：0"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/left13Text"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buildingNumText"
        android:text="目标宿舍楼："
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/left14Text"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/buildingNumSpin"
        android:layout_below="@+id/left14Text"
        android:layout_toRightOf="@+id/buildingNumText"
        android:layout_marginTop="24dp">

    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roommateText"
        android:text="同住人信息"
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/buildingNumText"
        android:layout_marginTop="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stu1idText"
        android:text="1学号："
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/roommateText" />
    <EditText
        android:id="@+id/stu1idEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/roommateText"
        android:layout_toRightOf="@+id/v1codeText"
        android:ems="10"
        android:singleLine="true"
        android:inputType="number"
        android:maxLength="10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/v1codeText"
        android:text="1校验码："
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/stu1idText" />
    <EditText
        android:id="@+id/v1codeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/stu1idText"
        android:layout_toRightOf="@+id/v1codeText"
        android:ems="10"
        android:singleLine="true"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/submitBtn"
        android:src="@drawable/submit_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/v1codeText"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
